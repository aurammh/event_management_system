<div class="column is-one-quarter">
  <h3 class="title is-4">Past Events</h3>
  <nav class="panel">
    <% @events.past_events.each do | event |%>
      <div class="panel-block">
        <p><%= event.date.strftime("%B")[0,3] %> &nbsp;</p>
        <p><%= event.date.year %> &nbsp; &nbsp;</p>
        <p> <%= link_to event.name, event %></p> 
      </div>
    <% end %>
  </nav>
</div>      

  