<%= semantic_form_for [:admin, @user], url: { action: :update_password } do |f| %>
  <%= f.inputs do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, label: 'Update Password' %>
    <%= link_to 'Back', admin_user_path(@user) %>
  <% end %>
<% end %>
